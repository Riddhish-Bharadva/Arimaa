<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <RelativeLayout
                android:id="@+id/RelL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/elephant1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/arimaaIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/elephant2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/AboutGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction to Arimaa:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/RelL1"/>
            <TextView
                android:id="@+id/AboutGameContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:layout_below="@+id/AboutGame"/>
            <TextView
                android:id="@+id/GameRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rules for playing Arimaa:"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/AboutGameContent"/>
            <TextView
                android:id="@+id/GameRulesContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:layout_below="@+id/GameRules"/>
            <TextView
                android:id="@+id/WinningConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic winning conditions in Arimaa:"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/GameRulesContent"/>
            <TextView
                android:id="@+id/WinningConditionsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:layout_below="@+id/WinningConditions"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>